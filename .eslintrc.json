{
  "env": { "node": true, "commonjs": true, "es6": true },
  "extends": ["eslint:recommended"],
  "globals": { "Atomics": "readonly", "SharedArrayBuffer": "readonly" },
  "ignorePatterns": [],
  "parserOptions": { "ecmaVersion": 2018, "sourceType": "module" },
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["warn", "windows"],
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"]
  }
}
